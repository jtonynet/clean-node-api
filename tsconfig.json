{
   "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target":"ES2022",
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
    }
   },
   "include": [ "src", "tests"],
   "exclude": []
}
